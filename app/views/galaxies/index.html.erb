<h1 style="text-align: center;">Galaxia</h1>
<div class="container">
  <table class="table">
    <thead>
   <tr>
      <th>Nombre</th>
      <th>Cantidad de Planetas</th>
      <th>Aprox. Estrellas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @galaxies.each do |galaxy| %>
      <tr>
        <td><%= galaxy.name %></td>
        <td><%= galaxy.planetas %></td>
        <td><%= galaxy.estrellas %></td>
        <td><%= link_to 'Mostrar', galaxy %></td>
        <td><%= link_to 'Editar', edit_galaxy_path(galaxy) %></td>
        <td><%= link_to 'Eliminar', galaxy, method: :delete, data: { confirm: 'Esta seguro de eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
